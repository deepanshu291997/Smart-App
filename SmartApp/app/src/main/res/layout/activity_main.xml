<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mudit.com.smartapp.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <ImageView
            android:id="@+id/imgView"
            android:src="@android:color/darker_gray"
            android:background="@drawable/rectanglebox"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Spinner
            android:layout_gravity="right|end"
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/rectanglebox"
            android:layout_margin="2dp"
            android:id="@+id/tvResult"
            android:padding="10dp"
            android:text="See Your Text Here!!"
            android:textSize="16sp"
            android:gravity="center"
            android:minLines="5"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            </ScrollView>
        <ImageButton
            android:background="@android:color/transparent"
            android:layout_gravity="bottom|right"
            android:padding="10dp"
            android:id="@+id/imgButton"
            android:src="@drawable/ic_headset_mic_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </FrameLayout>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

    <Button
        android:id="@+id/btUpload"
        android:layout_gravity="left"
        android:text="Upload"
        android:backgroundTint="#000000"
        android:textColor="@android:color/white"
        android:layout_weight="2"

        android:layout_width="0dp"
        android:layout_height="match_parent" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="match_parent" >
                <ImageButton
                    android:id="@+id/imgRealTimeOcr"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_camera_black_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
    <Button
        android:id="@+id/btTakePicture"

        android:text="Take Picture"
        android:backgroundTint="#000000"
        android:textColor="@android:color/white"
        android:layout_weight="2"

        android:layout_width="0dp"
        android:layout_height="wrap_content" />
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
